<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Your Cart</title>

  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Inter Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #f3f4f6;
    }
  </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4">

  <div class="container mx-auto max-w-4xl">
    <div class="flex justify-center">
      <div class="w-full">

        <!-- Cart Card -->
        <div class="bg-white shadow-lg rounded-xl overflow-hidden">
          <!-- Header -->
          <div class="bg-gray-800 text-white p-4 text-center rounded-t-xl">
            <h2 class="text-2xl font-semibold mb-0">ðŸ›’ Your Cart</h2>
          </div>

          <!-- Table -->
          <div class="p-0">
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider rounded-tl-xl">Item</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Price (â‚¹/kg)</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity (kg)</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider rounded-tr-xl">Subtotal (â‚¹)</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200 text-center">
                  <% if (cart.length === 0) { %>
                    <tr>
                      <td colspan="4" class="py-10 text-center text-gray-500 text-lg">ðŸ›’ Your cart is empty</td>
                    </tr>
                  <% } else { %>
                    <% cart.forEach(item => { %>
                      <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= item.itemName %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">â‚¹<%= item.price.toFixed(2) %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= item.quantity %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">â‚¹<%= (item.price * item.quantity).toFixed(2) %></td>
                      </tr>
                    <% }) %>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>

          <!-- Footer -->
          <% if (cart.length > 0) { %>
            <div class="flex flex-col md:flex-row justify-between items-center p-4 bg-gray-100 rounded-b-xl">
              <div class="mb-2 md:mb-0 text-lg font-bold text-gray-800">
                Total: â‚¹<%= total.toFixed(2) %>
              </div>
              <a href="/make-payment" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition ease-in-out duration-150">
                <span class="mr-2">ðŸ’³</span> Make Payment
              </a>
            </div>
          <% } %>
        </div>

      </div>
    </div>
  </div>

</body>
</html>
