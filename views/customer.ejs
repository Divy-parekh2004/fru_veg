      <div class="form-row">
        <div class="form-group">
            <label for="mobile">Mobile Number</label>
            <input type="text" id="mobile" name="mobile" required placeholder="Enter 10-digit mobile number" pattern="\d{10}" maxlength="10">
        </div>
        <div class="form-group">
          <label for="userid">Userid</label>
          <input type="text" id="userid" name="userid" required placeholder="Enter userid ">
        </div>
      </div>

      <!-- Group OTP and Verify OTP together -->

      <!-- <div class="form-row otp-verify-group">
        <div class="form-group">
