<body style="background-color: #f5f5f5; font-family: Arial, sans-serif;">
  <div class="container my-4">
    <div class="card shadow">
      <div class="card-header bg-success text-white fs-5">✅ Order Summary</div>

      <div class="card-body">
        <% if (cart.length === 0) { %>
          <p>Your cart is empty.</p>
        <% } else { %>
          <ul class="list-group mb-3">
            <% cart.forEach(item => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= item.itemName %> - <%= item.quantity %> kg
                <span>₹<%= (item.price * item.quantity).toFixed(2) %></span>
              </li>
            <% }) %>
          </ul>

          <h5>Total: ₹<%= total.toFixed(2) %></h5>
          <form method="POST" action="/finalize-payment">
            <button type="submit" class="btn btn-success mt-3">Pay Now</button>
          </form>
        <% } %>
      </div>
    </div>
  </div>
</body>
