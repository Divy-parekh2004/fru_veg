<% if (customers.length === 0) { %>
    <p class="m-5">No customers found in your area.</p>
<% } else { %>
    <div class="d-flex m-5 gap-3 flex-wrap">
        <% customers.forEach(customer => { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= customer.fullname %></h5>
                    <p class="card-text">Customer information and contact details.</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Mobile:</strong> <%= customer.mobilenumber %></li>
                    <li class="list-group-item"><strong>Address:</strong> <%= customer.full_address %></li>
                    <li class="list-group-item"><strong>City:</strong> <%= customer.area_city %></li>
                    <li class="list-group-item"><strong>State:</strong> <%= customer.state %></li>
                    <li class="list-group-item"><strong>Pincode:</strong> <%= customer.pincode %></li>
                </ul>
            </div>
        <% }) %>
    </div>
<% } %>




