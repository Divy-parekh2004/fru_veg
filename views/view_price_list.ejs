  }

  .table-wrapper {
    width: 100%;
    overflow-x: auto;
    margin-top: 10px;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    background-color: white;
    font-size: 1rem;
  }

  th, td {
    padding: 8px 10px;
    border: 1px solid #ccc;
    text-align: left;
    font-size: 0.95rem;
  }

  .btn {
    display: inline-block;
    margin-top: 15px;
    text-decoration: none;
    padding: 10px 14px;
    background: #4CAF50;
    color: white;
    border-radius: 5px;
    font-weight: bold;
    font-size: 1rem;
  }

  .btn:hover {
    background-color: #388e3c;
  }

  @media screen and (max-width: 768px) {
    h2 {
      font-size: 1.25rem;
    }

