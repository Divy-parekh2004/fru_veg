<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Price List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #f5f5f5; font-family: Arial, sans-serif;">

  <div class="container my-4">
    <div class="row justify-content-center">
      <div class="col-md-10">

        <div class="card shadow">
          <div class="card-header bg-primary text-white text-center fs-5">
            üõçÔ∏è Price List for <%= deliever.fullname %>
          </div>

          <form method="POST" action="/cart/bulk-add">
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table mb-0">
                  <thead class="table-light">
                    <tr>
                      <th>Item</th>
                      <th>Price (‚Çπ/kg)</th>
                      <th>Quantity (kg)</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (priceList.length === 0) { %>
                      <tr>
                        <td colspan="3" class="text-center text-muted">No prices available yet.</td>
                      </tr>
                    <% } else { %>
                      <% priceList.forEach((item, index) => { %>
                        <tr>
                          <td><%= item.name %></td>
                          <td>‚Çπ <%= item.price.toFixed(2) %></td>
                          <td>
                            <input 
                              type="hidden" name="items[<%= index %>][name]" value="<%= item.name %>">
                            <input 
                              type="hidden" name="items[<%= index %>][price]" value="<%= item.price %>">
                            <input 
                              type="number" name="items[<%= index %>][quantity]" value="0" min="0"
                              class="form-control form-control-sm" style="width: 100px;">
                          </td>
                        </tr>
                      <% }) %>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>

            <div class="card-footer d-flex justify-content-between">
              <a href="/matching-delievers" class="btn btn-outline-primary">‚¨ÖÔ∏è Back</a>
              <button type="submit" class="btn btn-success">‚ûï Add Selected to Cart</button>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
