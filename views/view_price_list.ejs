<h2 style="text-align: center; font-size: 1.5rem;">üõçÔ∏è Price List for <%= deliever.fullname %></h2>

<div class="table-wrapper">
  <table>
    <thead>
      <tr>
        <th>Item</th>
        <th>Price (‚Çπ/kg)</th>
      </tr>
    </thead>
    <tbody>
      <% if (priceList.length === 0) { %>
        <tr>
          <td colspan="2">No prices available yet.</td>
        </tr>
      <% } else { %>
        <% priceList.forEach(item => { %>
          <tr>
            <td data-label="Item"><%= item.name %></td>
            <td data-label="Price">‚Çπ <%= item.price.toFixed(2) %></td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

<a href="/" class="btn">‚¨ÖÔ∏è Back to Home</a>

<style>
  body {
    margin: 0;
    padding: 10px;
